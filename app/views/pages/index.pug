extend ../layout

block content
	.container(style='margin-bottom: 60px;')
		.row
			each cat in categories
				.panel.panel-primary
					.panel-heading
						h3= cat.name
						h3
							a(href='/results?cat='+cat.id+'&p=0') 更多
					.panel-body
						if cat.movies && cat.movies.length>0
							each item in cat.movies
								.col-md-2
									.thumbnail
										a(href="/movie/"+item._id)
											if item.poster.indexOf('http:')
												img(src=item.poster, alt=item.title, style="wiidth: 180px; height:236px")
											else
												img(src="/upload/"+item.poster, alt=item.title, style="wiidth: 180px; height:236px")
												//(style="text-align:center;")
										.caption
											h3(style="text-align:center;")= item.title
											p(style="text-align:center; margin-top: 40px;"): a.btn.btn-primary(href="/movie/"+ item._id, role="button") 详情
											//- 要紧挨并且有空格，要不报错
