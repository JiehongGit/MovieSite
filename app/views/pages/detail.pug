extend ../layout

block content
	.container
		.row
			.col-md-7
				video(src=movie.flash, allowFullScreen="true", width="720", height="450", align="middle", controls="controls")
				.panel.panel-default(style='margin-bottom: 60px;')
					.panel-heading
						h3 评论区
					.panel-body
						ul.media-list
							each item in comments
								//- 多种写法
								- var aa = item.content;
								li.media
									.pull-left
										//- 锚点，跳转到主评论
										a.comment(href="#comments", data-cid=item._id, data-tid=item.from._id) 
											img.media-object(src="/images/nimin.jpg",alt="头像",style="width:35px; height:35px;background:#eee;")
									.media-body
										h4.media-heading #{item.from.name}
										//- span #{item.content} #{aa}
										//p= item.content + ": "+ item.from.name
										p= item.content
										if item.reply && item.reply.length > 0
											each reply in item.reply
												.media
													.pull-left
														a.comment(href="#comments", data-cid=item._id, data-tid=reply.from._id)
															img.media-object(src="/images/nimin.jpg",alt="头像",style="width:35px; height:35px;background:#eee;")
													.media-body
														h4.media-heading #{reply.from.name}
															//| #{reply.from?reply.from.name:""}
															span.text-info &nbsp;回复&nbsp;
															| #{(reply.to?reply.to.name+":":"")}
														p= reply.content
									hr
						#comments
							form#commentForm(method="POST", action="/user/comment")
								input(type="hidden", name="comment[movie]", value= movie._id)
								if user
									input(type="hidden", name="comment[from]", value= user._id)
								.form-group
									textarea.form-control(name = "comment[content]" row="3")
								if user
									button.btn.btn-primary(type="submit") 评论
								else
									a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登陆后评论								
			.col-md-5
				dl.dl-horizontal
					dt 电影名字
					dd #{movie.title}
					dt 导演
					dd= movie.director
					dt 国家
					dd= movie.country
					dt 语言
					dd= movie.language
					dt 上映年份
					dd= movie.language
					dt 简介
					dd= movie.summary
	script(src="/js/detail.js")