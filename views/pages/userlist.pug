extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th: p(align="center") 名字
                        th: p(align="center") 时间
                        th: p(align="center") 查看
                        th: p(align="center") 修改
                        th: p(align="center") 删除
                    tbody
                        each item in users
                            tr(class="item-id-" + item._id)
                                td(align="center")= item.name
                                td(align="center")= moment(item.meta.updateAt).format("YYYY-MM-DD HH:mm")
                                td(align="center"): a(target="_blank", href="../movie/" + item._id) 查看
                                td(align="center"): a(target="_blank", href="../admin/update" + item._id) 修改
                                td
                                    button.btn.btn-danger.del(type="button", data-id=item._id, style="text-align:center; width:100%;height:100%;margin:0px;") 删除